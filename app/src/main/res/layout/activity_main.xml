<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="400dp"
    android:layout_height="700dp"
    android:layout_gravity="center_horizontal"
    android:layout_margin="15dp"
    app:cardBackgroundColor="#00B0FF"
    app:cardCornerRadius="5dp"
    app:cardElevation="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="700dp"
        android:orientation="vertical"
        android:padding="10dp">
        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="78dp"
            android:background="#3d3dff"
            android:padding="3dp"
            android:gravity="center"
            android:textSize="25dp"
            android:text="Aranceles \n Estudiante Universitario"
            android:textColor="#FFFFFF"
            android:textStyle="bold|italic"/>
        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="36dp"
            android:background="#3d3dff"
            android:padding="14dp"
            android:text="Â¿De que carrera eres?"
            android:textColor="@color/white"
            android:textStyle="italic|bold"/>
        <Spinner
            android:id="@+id/Lista_Carrera"
            android:layout_width="380dp"
            android:layout_height="60dp"
            android:padding="16dp"
            android:background="#FFFFFF"/>
        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="4dp"
            android:background="#3d3dff"
            android:padding="14dp"
            android:text="Tipo de universidad a la que estudiaste: "
            android:textColor="@color/white"
            android:textStyle="italic|bold"/>
        <Spinner
            android:id="@+id/Tipo_Uni"
            android:layout_width="380dp"
            android:layout_height="60dp"
            android:layout_marginTop="4dp"
            android:padding="16dp"
            android:background="#FFFFFF"/>
        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="4dp"
            android:background="#3d3dff"
            android:padding="14dp"
            android:text="Ingresa tu cuota: "
            android:textColor="@color/white"
            android:textStyle="italic|bold"/>
        <EditText
            android:id="@+id/Edicuota"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="4dp"
            android:background="#80D8FF"
            android:ems="10"
            android:padding="14dp"
            android:gravity="center"
            android:hint="Ej: $ 70.00"/>
        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:background="#3d3dff"
            android:padding="14dp"
            android:text="Ingresa Tu Cum Universitario: "
            android:textColor="@color/white"
            android:textStyle="italic|bold"/>
        <EditText
            android:id="@+id/EdiCum"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:background="#80D8FF"
            android:ems="10"
            android:padding="14dp"
            android:gravity="center"
            android:hint="Ej: 9"/>

        <Button
            android:id="@+id/VerDatos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:backgroundTint="#c71ed8"
            android:backgroundTintMode="add"
            android:text="Mostrar Arranceles" />

    </LinearLayout>
</androidx.cardview.widget.CardView>